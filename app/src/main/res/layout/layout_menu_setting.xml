<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/common_menu_shadow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="48.5dip"
        android:layout_marginTop="48.5dip"
        android:background="@color/menubar_show_background" />

    <LinearLayout
        android:id="@+id/commen_menu_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48.5dip"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_night_type"
                android:layout_width="0dip"
                android:layout_height="41dip"
                android:layout_weight="1"
                android:src="@drawable/menu_night_mode_normal" />

            <ImageView
                android:id="@+id/menu_pic_type"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/menu_no_pic_normal" />

            <ImageView
                android:id="@+id/menu_fullscreen_type"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/menu_full_screen_normal" />

            <ImageView
                android:id="@+id/menu_trace_type"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/menu_no_history_normal" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginBottom="5dip"
            android:background="@color/content_divider" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:orientation="horizontal">

            <com.qirui.browser.view.MenuItem
                android:id="@+id/menu_addbookmark"
                style="@style/menutoolbarStyle"
                app:menu_icon="@drawable/menu_tool_addbookmark"
                app:menu_name="@string/menu_bottom_add_bookmark" />

            <com.qirui.browser.view.MenuItem
                android:id="@+id/menu_history"
                style="@style/menutoolbarStyle"
                app:menu_icon="@drawable/menu_tool_history"
                app:menu_name="@string/menu_bottom_history" />

            <com.qirui.browser.view.MenuItem
                android:id="@+id/menu_download"
                style="@style/menutoolbarStyle"
                app:menu_icon="@drawable/menu_tool_download"
                app:menu_name="@string/menu_bottom_download" />

            <com.qirui.browser.view.MenuItem
                android:id="@+id/menu_refresh"
                style="@style/menutoolbarStyle"
                app:menu_icon="@drawable/menu_tool_refresh"
                app:menu_name="@string/menu_bottom_refresh" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:orientation="horizontal">

            <com.qirui.browser.view.MenuItem
                android:id="@+id/menu_setting"
                style="@style/menutoolbarStyle"
                app:menu_icon="@drawable/menu_tool_setting"
                app:menu_name="@string/menu_bottom_setting" />

            <com.qirui.browser.view.MenuItem
                android:id="@+id/menu_share"
                style="@style/menutoolbarStyle"
                app:menu_icon="@drawable/menu_tool_share"
                app:menu_name="@string/menu_bottom_share" />

            <com.qirui.browser.view.MenuItem
                android:id="@+id/menu_tools"
                style="@style/menutoolbarStyle"
                app:menu_icon="@drawable/menu_tool_tools"
                app:menu_name="@string/menu_bottom_tools" />

            <com.qirui.browser.view.MenuItem
                android:id="@+id/menu_exit"
                style="@style/menutoolbarStyle"
                app:menu_icon="@drawable/menu_tool_exit"
                app:menu_name="@string/menu_bottom_exit" />

        </LinearLayout>

    </LinearLayout>

</merge>