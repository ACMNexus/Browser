<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.qirui.browser.view.BrowserSettingItem
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            app:settingValueColor="@color/clear_data_value_color"
            app:setting_desc="@string/pref_privacy_clear_cache_summary"
            app:setting_state="6"
            app:setting_title="@string/pref_privacy_clear_cache"
            app:setting_value="@string/pref_privacy_clear_data_operate" />

        <com.qirui.browser.view.BrowserSettingItem
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            app:settingValueColor="@color/clear_data_value_color"
            app:setting_desc="@string/pref_privacy_clear_cookies"
            app:setting_state="6"
            app:setting_title="@string/pref_privacy_cookies_title"
            app:setting_value="@string/pref_privacy_clear_data_operate" />

        <com.qirui.browser.view.BrowserSettingItem
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            app:settingValueColor="@color/clear_data_value_color"
            app:setting_desc="@string/pref_privacy_clear_form_data_summary"
            app:setting_state="6"
            app:setting_title="@string/pref_privacy_clear_form_data"
            app:setting_value="@string/pref_privacy_clear_data_operate" />

        <com.qirui.browser.view.BrowserSettingItem
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            app:settingValueColor="@color/clear_data_value_color"
            app:setting_desc="@string/pref_privacy_clear_history_summary"
            app:setting_state="6"
            app:setting_title="@string/pref_privacy_clear_history"
            app:setting_value="@string/pref_privacy_clear_data_operate" />

        <com.qirui.browser.view.BrowserSettingItem
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            app:settingValueColor="@color/clear_data_value_color"
            app:setting_desc="@string/pref_privacy_clear_passwords_summary"
            app:setting_state="6"
            app:setting_title="@string/pref_privacy_clear_passwords"
            app:setting_value="@string/pref_privacy_clear_data_operate" />

        <com.qirui.browser.view.BrowserSettingItem
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            app:settingValueColor="@color/clear_data_value_color"
            app:setting_desc="@string/pref_privacy_clear_geolocation_access_summary"
            app:setting_state="6"
            app:setting_title="@string/pref_privacy_clear_geolocation_access"
            app:setting_value="@string/pref_privacy_clear_data_operate" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/setting_item_background"
            android:gravity="center"
            android:text="@string/pref_privacy_clearall"
            android:textColor="@color/clear_data_value_color"
            android:textSize="17sp" />

    </LinearLayout>

</ScrollView>