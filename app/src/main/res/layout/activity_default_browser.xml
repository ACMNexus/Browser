<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_divider"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/default_setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="25dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="25dip"
            android:src="@drawable/setting_no_default_browser_miui" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:background="@color/content_divider" />

        <TextView
            android:id="@+id/startSetting"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@drawable/setting_item_background"
            android:gravity="center"
            android:text="开始设置"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/default_clear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:text="@string/default_browser_clear_tips"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:gravity="center">

            <ImageView
                android:id="@+id/browserIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_icon_site" />

            <TextView
                android:id="@+id/browserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="默认浏览器"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:text="@string/setting_default_browser_tips"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/content_divider" />

        <TextView
            android:id="@+id/clearDefault"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@drawable/setting_item_background"
            android:gravity="center"
            android:text="清除"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>